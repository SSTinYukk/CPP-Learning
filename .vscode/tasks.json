{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build with Clang",
        "type": "shell",
        "command": "clang++",
        "args": [
          "-g",
          "-std=c++17",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}.out",

        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
 }
